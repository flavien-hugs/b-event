---

[
    {% for post in site.posts %}
        {
            "title": "{{ post.title | escape }}",
            "categorie": "{{ post.categories }}",
            "tags"     : "{{ post.tags | join: ', ' }}",
            "url": "{{ site.url }}{{ post.url }}",
            "date" : "{{ post.date }}"
        }
        {% unless forloop.last %},{% endunless %}
    {% endfor %}
]
